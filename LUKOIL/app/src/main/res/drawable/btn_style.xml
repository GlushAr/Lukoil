<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="3dip" android:color="#755F5F" />
            <gradient android:angle="-90" android:startColor="#642832" android:endColor="#5F2730" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="3dip" android:color="#755F5F" />
            <gradient android:angle="-90" android:startColor="#842839" android:endColor="#5F2730" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="2dip" android:color="#755F5F" />
            <gradient android:angle="-90" android:startColor="#842839" android:endColor="#5F2730" />
        </shape>
    </item>
</selector>